    <tv.danmaku.ijk.media.example.widget.media.IjkVideoView
        android:id="@+id/si_videoView"
        style="@style/mvideolayout"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"

        app:layout_constraintTop_toBottomOf="@+id/appBarLayout2"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints">

    </tv.danmaku.ijk.media.example.widget.media.IjkVideoView>

    <TableLayout
        android:id="@+id/hud_s2_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/ijk_transparent_dark"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="409dp"
        android:layout_height="214dp"
        android:layout_marginStart="2dp"
        android:layout_marginBottom="68dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/si_videoView"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints">


        <TextView
            android:id="@+id/textViews_xy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XY Stage"
            app:layout_constraintBottom_toTopOf="@+id/s2rockerView_z"
            app:layout_constraintEnd_toEndOf="@+id/s2rockerView_z"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/s2rockerView_z"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread" />

        <TextView
            android:id="@+id/textViews_z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Z Stage"
            app:layout_constraintBottom_toTopOf="@+id/s2rockerView_xy"
            app:layout_constraintEnd_toEndOf="@+id/s2rockerView_xy"
            app:layout_constraintStart_toStartOf="@+id/s2rockerView_xy"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread" />

        <com.kongqw.rockerlibrary.view.RockerView
            android:id="@+id/s2rockerView_xy"
            android:layout_width="128dp"
            android:layout_height="137dp"
            app:areaBackground="@color/pv_rocker_xy_big"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/pv_zoom_in"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/s2rockerView_z"
            app:layout_constraintTop_toBottomOf="@+id/textViews_z"
            app:rockerBackground="@color/pv_rocker_xy_small"
            app:rockerRadius="20dp"
            tools:ignore="MissingConstraints" />

        <com.penglab.hi5.basic.utils.view.ImageButtonExt
            android:id="@+id/startZscan"
            android:layout_width="89dp"
            android:layout_height="44dp"
            android:src="@null"
            android:text="@string/zscan"
            android:textColor="#cc0000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints"
            tools:srcCompat="@drawable/ic_startzscan_foreground" />

        <com.penglab.hi5.basic.utils.view.ImageButtonExt
            android:id="@+id/pv_zoom_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="10dp"
            android:text="@string/pv_zoom_in"
            android:textColor="#cc0000"
            app:layout_constraintBottom_toTopOf="@+id/pv_zoom_out"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/s2rockerView_xy"
            app:layout_constraintStart_toStartOf="@+id/pv_zoom_out"
            app:layout_constraintTop_toBottomOf="@+id/startZscan"
            app:layout_constraintVertical_chainStyle="spread"
            tools:ignore="MissingConstraints"
            tools:srcCompat="@drawable/ic_zoom_in" />

        <com.penglab.hi5.basic.utils.view.ImageButtonExt
            android:id="@+id/pv_zoom_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:src="@null"
            android:text="@string/pv_zoom_out"
            android:textColor="#cc0000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pv_zoom_in"
            tools:ignore="MissingConstraints"
            tools:srcCompat="@drawable/ic_baseline_zoom_out_24" />

        <com.kongqw.rockerlibrary.view.RockerView
            android:id="@+id/s2rockerView_z"
            android:layout_width="167dp"
            android:layout_height="171dp"
            app:areaBackground="@color/pv_rocker_z_big"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/s2rockerView_xy"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViews_xy"
            app:rockerBackground="@color/pv_rocker_z_small"
            app:rockerRadius="20dp"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.penglab.hi5.basic.utils.view.ImageButtonExt
        android:id="@+id/startcamera"
        android:layout_width="101dp"
        android:layout_height="44dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="1dp"
        android:src="@null"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2"
        app:layout_constraintEnd_toStartOf="@+id/stopcamera"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/si_videoView"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/ic_startcamera_foreground"
        tools:ignore="MissingConstraints" />

    <com.penglab.hi5.basic.utils.view.ImageButtonExt
        android:id="@+id/stopcamera"
        android:layout_width="101dp"
        android:layout_height="44dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="1dp"
        android:src="@null"
        app:layout_constraintBottom_toBottomOf="@+id/startcamera"
        app:layout_constraintEnd_toStartOf="@+id/switch_pro_img"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/startcamera"
        app:layout_constraintTop_toTopOf="@+id/startcamera"
        app:layout_constraintVertical_bias="0.6"
        app:srcCompat="@drawable/ic_stopcamera_foreground"
        tools:ignore="MissingConstraints" />

    <Switch
        android:id="@+id/switch_pro_img"
        android:layout_width="101dp"
        android:layout_height="wrap_content"

        android:shape="rectangle"
        android:showText="true"
        android:switchTextAppearance="@style/myTextAppearance"
        android:textOff="cv off"
        android:textOn="cv on"
        app:layout_constraintBottom_toBottomOf="@+id/stopcamera"
        app:layout_constraintEnd_toStartOf="@+id/switch_cam"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/stopcamera"
        app:layout_constraintTop_toTopOf="@+id/stopcamera"
        tools:ignore="HardcodedText,MissingConstraints,UseSwitchCompatOrMaterialXml" />

    <Switch
        android:id="@+id/switch_cam"
        android:layout_width="102dp"
        android:layout_height="wrap_content"

        android:shape="rectangle"
        android:showText="true"
        android:switchTextAppearance="@style/myTextAppearance"
        android:textOff="cam off"
        android:textOn="cam on"
        app:layout_constraintBottom_toBottomOf="@+id/switch_pro_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/switch_pro_img"
        app:layout_constraintTop_toTopOf="@+id/switch_pro_img"
        tools:ignore="MissingConstraints,UseSwitchCompatOrMaterialXml" />

    <com.penglab.hi5.basic.utils.view.ImageButtonExt
        android:id="@+id/startinject"
        android:layout_width="101dp"
        android:layout_height="44dp"
        android:src="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2"
        app:srcCompat="@drawable/ic_startinject_foreground"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>


