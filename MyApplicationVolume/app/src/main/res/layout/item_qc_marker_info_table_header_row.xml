<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/qc_marker_color_column_text_view"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="5dp"
        android:textSize="18sp"
        android:gravity="center"
        android:text="color"/>

    <TextView
        android:id="@+id/qc_marker_type_column_text_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="5dp"
        android:textSize="18sp"
        android:gravity="center"
        android:text="type"/>

    <TextView
        android:id="@+id/qc_marker_state_column_text_view"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:padding="5dp"
        android:textSize="18sp"
        android:gravity="center"
        android:text="state"/>

</LinearLayout>