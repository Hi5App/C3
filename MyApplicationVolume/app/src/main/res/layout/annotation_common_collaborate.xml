<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/collaborate_res_button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:text="res"
        android:textSize="14dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.10"
        android:layout_marginTop="75dp"/>

    <Button
        android:id="@+id/collaborate_user_list"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:text="User"
        android:textSize="12dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19"
        android:layout_marginTop="127dp"/>

    <Button
        android:id="@+id/collaborate_quality_control_info"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:text="QC"
        android:textSize="14dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.10"
        android:layout_marginTop="179dp"/>

    <ImageButton
        android:id="@+id/edit_mode_indicator_collaborate"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="65dp"
        android:scaleType="fitXY"
        android:background="@drawable/circle_transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.michaldrabik.tapbarmenulib.TapBarMenu
        android:id="@+id/tapBarMenu_collaborate"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:tbm_backgroundColor="@color/colorMid_yellow"
        app:tbm_menuAnchor="bottom"
        tools:ignore="MissingDefaultResource">

        <ImageView
            android:id="@+id/draw_i_collaborate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/ic_draw_main"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/pinpoint_collaborate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/ic_marker_main" />

        <ImageView
            android:id="@+id/change_curve_type_collaborate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/ic_change_curve_type_2" />

        <ImageView
            android:id="@+id/delete_curve_collaborate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/ic_delete_curve_normal" />

        <ImageView
            android:id="@+id/delete_marker_collaborate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/ic_marker_delete_normal" />

        <com.nightonke.boommenu.BoomMenuButton
            android:id="@+id/expanded_menu_collaborate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:bmb_buttonEnum="textOutsideCircle"
            app:bmb_piecePlaceEnum="piecePlace_dot_6_1"
            app:bmb_buttonPlaceEnum="buttonPlace_sc_6_1"
            app:bmb_buttonRadius="15dp"
            app:bmb_backgroundEffect="false"
            app:bmb_shadowEffect="false" />

    </com.michaldrabik.tapbarmenulib.TapBarMenu>

</androidx.constraintlayout.widget.ConstraintLayout>